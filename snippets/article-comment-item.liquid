{%- capture comment_author -%}
  <strong>{{- comment.author -}}</strong>
{%- endcapture -%}
{% assign comment_date = comment.created_at | date: format: 'month_day_year' %}
<blockquote class="article--comments-item">
  <cite>
    {{ 'blog.comments.author_html' | t: author: comment_author, date: comment_date }}
  </cite>
  <div class="rte">
    {{- comment.content -}}
  </div>
</blockquote>
